# Server Configuration
NODE_ENV=development
PORT=8000
HOST=localhost
BASE_URL=http://localhost:8000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/langchain_workflows
MONGODB_URI_TEST=mongodb://localhost:27017/langchain_workflows_test

# Redis Configuration (for job queues and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Noam App Integration
NOAM_WEBHOOK_URL=https://noam-app.com/api/webhooks/universal-engine
NOAM_WEBHOOK_SECRET=your_noam_webhook_secret_here
NOAM_API_BASE_URL=https://noam-app.com/api
NOAM_API_KEY=your_noam_api_key_here

# API Keys - AI Providers
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Noam App Integration
NOAM_API_URL=http://localhost:3001
NOAM_API_KEY=your_noam_api_key_here
NOAM_WEBHOOK_SECRET=your_noam_webhook_secret

# External Services
WEBHOOK_BASE_URL=http://localhost:8000
EMAIL_SERVICE_API_KEY=your_email_service_key
SMS_SERVICE_API_KEY=your_sms_service_key

# Monitoring & Analytics
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Feature Flags
ENABLE_WORKFLOW_SCHEDULING=true
ENABLE_REAL_TIME_EVENTS=true
ENABLE_WORKFLOW_VERSIONING=true
ENABLE_AUDIT_LOGGING=true