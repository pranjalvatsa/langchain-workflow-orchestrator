# Production Environment Variables Template
# Copy this to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/langchain-workflows?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# External API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Noam App Integration
FRONTEND_URL=https://your-noam-app.vercel.app
NOAM_APP_URL=https://your-noam-app.vercel.app
NOAM_API_URL=https://your-noam-app.vercel.app/api

# Optional: Additional Services
SERPAPI_API_KEY=your-serpapi-key-for-search
REDIS_URL=redis://localhost:6379

# Security
CORS_ORIGIN=https://your-noam-app.vercel.app
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log