{
  "info": {
    "name": "LangChain Workflow Orchestrator",
    "description": "API collection for testing LangChain Workflow Orchestrator deployed on Render",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://langchain-workflow-orchestrator.onrender.com",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "executionId",
      "value": "",
      "type": "string"
    },
    {
      "key": "taskId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.json().success) {",
                  "    pm.environment.set('accessToken', pm.response.json().data.tokens.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@noamapp.com\",\n  \"password\": \"TestPassword123\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\",\n  \"noamUserId\": \"noam_test_user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.json().success) {",
                  "    pm.environment.set('accessToken', pm.response.json().data.tokens.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@noamapp.com\",\n  \"password\": \"TestPassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Customer Workflows",
      "item": [
        {
          "name": "Start Customer Offer Workflow",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.json().success) {",
                  "    pm.environment.set('executionId', pm.response.json().data.executionId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"customer_test_123\",\n  \"assignee\": \"test_assignee\",\n  \"workflowName\": \"Test Customer Offer Generation\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/customer-workflows/offer-prediction",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customer-workflows", "offer-prediction"]
            }
          }
        },
        {
          "name": "Get Workflow Status",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.json().success) {",
                  "    const data = pm.response.json().data;",
                  "    if (data.currentStep && data.currentStep.taskId) {",
                  "        pm.environment.set('taskId', data.currentStep.taskId);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/customer-workflows/status/{{executionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customer-workflows", "status", "{{executionId}}"]
            }
          }
        },
        {
          "name": "Mock Approval",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"taskId\": \"{{taskId}}\",\n  \"decision\": \"approved\",\n  \"feedback\": \"Test approval from Postman\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/customer-workflows/test/mock-approval",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customer-workflows", "test", "mock-approval"]
            }
          }
        },
        {
          "name": "Noam Task Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"taskId\": \"{{taskId}}\",\n  \"status\": \"completed\",\n  \"decision\": \"approved\",\n  \"feedback\": \"Approved via webhook from Postman\",\n  \"completedBy\": \"test_user\",\n  \"completedAt\": \"{{$isoTimestamp}}\",\n  \"workflowExecutionId\": \"{{executionId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/customer-workflows/webhooks/noam-task",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customer-workflows", "webhooks", "noam-task"]
            }
          }
        }
      ]
    },
    {
      "name": "General Workflow Management",
      "item": [
        {
          "name": "Get All Executions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/executions?status=running&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "executions"],
              "query": [
                {
                  "key": "status",
                  "value": "running"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Execution Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/executions/{{executionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "executions", "{{executionId}}"]
            }
          }
        }
      ]
    }
  ]
}